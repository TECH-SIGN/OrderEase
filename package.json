{
  "name": "orderease",
  "version": "1.0.0",
  "private": true,
  "description": "Restaurant Ordering System - Full Stack Application",
  "scripts": {
    "install-all": "npm install --prefix backend && npm install --prefix frontend",
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm start --prefix frontend\"",
    "seed": "npm run seed --prefix backend",
    "start-backend": "npm run dev --prefix backend",
    "start-frontend": "npm start --prefix frontend",
    "build-frontend": "npm run build --prefix frontend"
  },
  "keywords": [
    "restaurant",
    "ordering",
    "monorepo",
    "pnpm-workspace",
    "nestjs",
    "react",
    "nodejs",
    "postgresql",
    "prisma"
  ],
  "author": "TechSign",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TECH-SIGN/OrderEase.git"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
