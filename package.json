{
  "name": "orderease",
  "version": "1.0.0",
  "private": true,
  "description": "Restaurant Ordering System - Monorepo with pnpm Workspace",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter \"./apps/*\" --parallel dev",
    "dev:api-gateway": "pnpm --filter @orderease/api-gateway dev",
    "dev:backend": "pnpm --filter @orderease/backend dev",
    "dev:order-service": "pnpm --filter @orderease/order-service dev",
    "dev:payment-service": "pnpm --filter @orderease/payment-service dev",
    "start:frontend": "pnpm --filter frontend start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "install-all": "pnpm install"
  },
  "keywords": [
    "restaurant",
    "ordering",
    "monorepo",
    "pnpm-workspace",
    "nestjs",
    "react",
    "nodejs",
    "postgresql",
    "prisma"
  ],
  "author": "TechSign",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TECH-SIGN/OrderEase.git"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "8.57.0"
  },
  "pnpm": {
    "overrides": {
      "eslint": "8.57.0"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "bcrypt",
      "core-js",
      "core-js-pure",
      "prisma"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
