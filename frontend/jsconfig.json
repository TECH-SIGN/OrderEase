{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "types/*": ["types/*"]
    },
    "checkJs": false,
    "allowJs": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
