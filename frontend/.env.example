# API Configuration
# Use API_GATEWAY_URL for centralized API Gateway, or API_URL for direct backend
# For HTTP development (default):
REACT_APP_API_GATEWAY_URL=http://localhost:5000/api
REACT_APP_API_URL=http://localhost:5000/api

# For HTTPS development with orderease.dev:
# Use the proxy configuration in src/setupProxy.js which forwards /api to backend
# The API calls will use relative paths like /api/auth/login
# REACT_APP_API_GATEWAY_URL=/api
# REACT_APP_API_URL=/api

# Backend port (used by setupProxy.js for proxying)
REACT_APP_BACKEND_PORT=5000

# Environment
NODE_ENV=development

# Optional: Feature flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_LOGGING=true

