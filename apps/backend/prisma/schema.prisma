// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================================
// Enums
// =====================================

enum Role {
  ADMIN
  USER
}

enum OrderEventType {
  ORDER_REQUESTED
  ORDER_VALIDATED
  PAYMENT_INITIATED
  PAYMENT_SUCCEEDED
  PAYMENT_FAILED
  ORDER_CONFIRMED
  ORDER_CANCELLED
}

enum EventSource {
  USER
  SYSTEM
  PAYMENT_GATEWAY
}

enum PaymentStatus {
  INITIATED
  SUCCEEDED
  FAILED
  REFUNDED
}

// =====================================
// User
// =====================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    Order[]
  cart      Cart?

  @@map("users")
}

// =====================================
// Food
// =====================================

model Food {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int      // Price in cents (e.g., $10.00 = 1000)
  category    String
  image       String?
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems OrderItem[]
  cartItems  CartItem[]

  @@map("foods")
}

// =====================================
// Order (IDENTITY + IDEMPOTENCY)
// =====================================

model Order {
  id              String   @id @default(cuid())
  userId          String
  idempotencyKey  String?  @unique
  createdAt       DateTime @default(now())

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     OrderItem[]
  events    OrderEvent[]
  payments  Payment[]

  @@map("orders")
}

// =====================================
// Order Items (SNAPSHOT)
// =====================================

model OrderItem {
  id        String   @id @default(cuid())
  orderId  String
  foodId   String
  foodName String
  price    Int      // Price in cents (e.g., $10.00 = 1000)
  quantity Int

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  food  Food  @relation(fields: [foodId], references: [id])

  @@map("order_items")
}

// =====================================
// ORDER EVENTS (SOURCE OF TRUTH)
// =====================================

model OrderEvent {
  id         String         @id @default(cuid())
  orderId   String
  type      OrderEventType
  payload   Json
  causedBy  EventSource
  paymentId String?
  createdAt DateTime       @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  payment Payment? @relation(fields: [paymentId], references: [id])

  @@index([orderId, createdAt])
  @@map("order_events")
}

// =====================================
// PAYMENTS
// =====================================

model Payment {
  id        String        @id @default(cuid())
  orderId  String
  provider String
  amount   Int          // Amount in cents (e.g., $10.00 = 1000)
  status   PaymentStatus
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  order  Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)
  events OrderEvent[]

  @@map("payments")
}

// =====================================
// IDEMPOTENCY KEYS
// =====================================

model IdempotencyKey {
  key         String   @id
  requestHash String
  response    Json
  createdAt   DateTime @default(now())

  @@map("idempotency_keys")
}

// =====================================
// CART
// =====================================

model Cart {
  id        String   @id @default(cuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  cartItems CartItem[]

  @@map("carts")
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String
  foodId    String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cart Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)
  food Food @relation(fields: [foodId], references: [id], onDelete: Cascade)

  @@unique([cartId, foodId])
  @@map("cart_items")
}
